{
  "name": "Plex Slack Webhooks",
  "description": "Use Plex webhooks to push media notifications into Slack",
  "repository": "https://github.com/ulve/webhooks-slack",
  "logo": "https://i2.wp.com/blog.stillaslife.com/wp-content/uploads/2016/09/Plex-Logo.png",
  "keywords": ["node", "redis"],
  "addons": [
    {"plan": "heroku-redis:hobby-dev"}
  ],
  "env": {
    "SLACK_URL": {
      "description": "Slack webhook URL"
    },
    "SLACK_CHANNEL": {
      "description": "Slack #channel-name"
    },
    "APP_URL": {
      "description": "URL of this App ({app_name}.herokuapp.com)"
    }
  }
}